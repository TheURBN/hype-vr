doctype html
html(lang=en)
  head
    meta(charset='UTF-8')
    title Test

  body
    a-scene(stats, fog='type: linear; color: #000; near: 20; far: 40')
      a-assets
        img#sky(src='img/sky.jpg')

      a-light(
        type='ambient',
        color='#eee',
      )

      a-entity(player)

      a-entity(world)

      a-entity(voxel-loader)

      a-entity
        a-light(
          type='directional',
          position='-1 1 0',
          color='#fff',
        )
        a-sky(
          theta-length='100',
          material='src: #sky; fog: false',
        )
        a-animation(
          attribute='rotation',
          dur='900000',
          to='0 360 0',
          repeat='indefinite',
          easing='linear',
        )
